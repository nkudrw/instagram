<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    <p><%= notice %></p>
    <% @blogs.each do |blog| %>
    <div class="row">
        <div class="profile">
      <%= profile_img(blog.user) if profile_img(blog.user) %>
      <%= blog.user.name %>
</div>
<div class="picture">
      <%= image_tag(blog.image ,:width =>"100%" ,:height =>"auto")  %>
  </div>
      <p><%= blog.content %></p>
      <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>

    <div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
    </div>

    <% end %>
  </div>
</div>
